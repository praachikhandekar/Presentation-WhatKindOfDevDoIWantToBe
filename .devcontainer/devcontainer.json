{
  "name": "WhatKindOfDevDoIWantToBe",
  "dockerComposeFile": "docker-compose.yaml",
  "service": "app",
  "workspaceFolder": "/workspace",
  "hostRequirements": {
    "cpus": 4
  },
  "waitFor": "onCreateCommand",
  "updateContentCommand": "npm install",
  "postAttachCommand": {
    "server": "npm start"
  },
  "customizations": {
    "codespaces": {
      "openFiles": [
        "src/App.jsx"
      ]
    },
    "vscode": {
      "extensions": [
        "ms-azuretools.vscode-docker",
        "cweijan.vscode-database-client2"
      ],
      "settings": {
        "editor.renderWhitespace": "all",
        "database-client2.connections": [
          {
            "name": "Workshop Db",
            "driver": "PostgreSQL",
            "server": "postgres",
            "port": 5432,
            "database": "workshopdb",
            "username": "postgres",
          }
        ],
        "database-client.autoConnect": true,
        "database-client.showToolbar": true,
        "database-client.keepAlive": true
      }
    }
  },
  "portsAttributes": {
    "3000": {
      "label": "Application",
      "onAutoForward": "openPreview"
    },
    "5432": {
      "label": "PostgreSQL",
      "onAutoForward": "silent"
    }
  },
  "forwardPorts": [
    3000,
    5432
  ]
}